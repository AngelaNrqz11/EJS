<!-- EJS Layouts -->
<%- include("header") -%>

<body>
  <div class="box">
    <h1 id="heading"><%= whatDay %></h1>
  </div>

  <div class="box">

    <% for (let i=0; i<newLists.length; i++){ %>
    <div class="item">
      <input type="checkbox" class="item">
      <p>
        <%= newLists[i] %>
      </p>
    </div>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="todo" placeholder="Add Item" autocomplete="off">
      <button type="submit" name="button" value=<%= whatDay %>>+</button>
    </form>
  </div>

  <!-- EJS Layouts -->
  <%- include("footer")  -%>
